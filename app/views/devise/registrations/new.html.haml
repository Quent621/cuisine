= stylesheet_link_tag 'inscription.css', media: 'all', 'data-turbolinks-track' => true


#landing-content
  %section.slider
  .container
    #loginbox.mainbox.col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3

      .row
        .icon
          = image_tag 'logo.png', style: 'max-width:150px;'

      .panel.panel-default
        .panel-heading
          .panel-title.text-center
            Inscrivez-vous
          .panel-body
            = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: 'form', class:'form-horizontal'}) do |f|
              = devise_error_messages!
              .input-group
                %span.input-group-addon
                  %i.fa.fa-envelope-o
                = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email'
              .input-group
                %span.input-group-addon
                  %i.fa.fa-user
                = f.text_field :lastname, autofocus: true, class: 'form-control', placeholder: 'Nom'
              .input-group
                %span.input-group-addon
                  %i.fa.fa-user-plus
                = f.text_field :firstname, autofocus: true, class: 'form-control', placeholder: 'Prénom'
              .input-group
                %span.input-group-addon
                  %i.fa.fa-lock.fa-lg
                = f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder:'Mot de passe (6 caractères minimum)'
              .input-group
                %span.input-group-addon
                  %i.fa.fa-lock.fa-lg
                = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'Confirmer le mot de passe'
              .form-group
                .col-sm-12.controls
                  .actions
                    %button{type: :submit, class: 'btn btn-default pull-right'}
                      %i.fa.fa-sign-in
                      S'inscrire

