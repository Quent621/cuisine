<div ng-app="recipe" ng-controller="RecipeCtrl">
  <%= form_for(@recipe) do |f| %>
    <% if @recipe.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

        <ul>
          <% @recipe.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="container">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <div class="well well-sm">
            <form class="form-horizontal" action="" method="post">
              <fieldset>
                <legend class="text-center">Nouvelle recette</legend>

                <!-- Name input-->
                <div class="form-group">
                  <label class="col-md-3 control-label" for="name">Nom de la recette</label>
                  <div class="col-md-9">
                    <%= f.text_field :name, id:'name', type:'text', placeholder:'Nom de la recette', class:'form-control' %>                  </div>
                </div>

                <!-- Email input-->
                <div class="form-group">
                  <label class="col-md-3 control-label" for="email">Difficulté</label>
                  <div class="col-md-9">
                    <div class="btn-group btn-group-justified" role="group" aria-label="...">
                      <div class="btn-group" role="group">
                        <button type="button" class="btn btn-success">Facile</button>
                      </div>
                      <div class="btn-group" role="group">
                        <button type="button" class="btn btn-warning">Moyen</button>
                      </div>
                      <div class="btn-group" role="group">
                        <button type="button" class="btn btn-danger">Compliqué</button>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Message body -->
                <div class="form-group">
                  <label class="col-md-3 control-label" for="message">Description</label>
                  <div class="col-md-9">
                    <%= f.text_area :description, class:'form-control', id:'message', placeholder:'Décrire la recette', rows:'5' %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-md-3 control-label" for="name">Temps</label>
                  <div class="col-md-3">
                    <%= f.text_field :preparation, id:'preparation', type:'text', placeholder:'Temps de préparation', class:'form-control' %>
                  </div>
                  <div class="col-md-3">
                    <%= f.text_field :repose, id:'repose', type:'text', placeholder:'Temps de repose', class:'form-control' %>
                  </div>
                  <div class="col-md-3">
                    <%= f.text_field :baking, id:'baking', type:'text', placeholder:'Temps de cuisson', class:'form-control' %>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-md-3 control-label" for="message">Ajoutez un ingrédient</label>
                  <div class="col-md-3">



                  </div>
                  <div class="col-md-3">
                    <input type="text" id="name" name="name" ng-model="test" placeholder="Quantité" class="form-control">
                  </div>
                  <div class="col-md-2">
                    <select class="form-control">
                      <optgroup label="Poid">
                        <option>KG</option>
                        <option>G</option>
                        <option>MG</option>
                      </optgroup>
                      <optgroup label="Capacité">
                        <option>L</option>
                        <option>CL</option>
                        <option>ML</option>
                      </optgroup>
                      <optgroup label="Cuillère">
                        <option>Soupe</option>
                        <option>Café</option>
                      </optgroup>
                    </select>
                  </div>
                  <div class="col-md-1">
                    <button ng-click="addIngredient()" type="button" class="btn btn-default fa fa-plus form-control"></button>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-md-3 control-label" for="message">Categorie</label>
                  <div class="col-md-9">
                    <%= f.collection_select :category_id, Category.all, :id, :name %>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-md-3 control-label" for="message">Photo</label>
                  <div class="col-md-9">
                    <select class="form-control">
                      <div class="field">

                      </div>
                    </select>
                  </div>
                </div>

                <!-- Form actions -->
                <div class="form-group">
                  <div class="col-md-12 text-right">
                    <div class="actions">
                      <%= f.submit %>
                    </div>
                  </div>
                </div>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
